<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:background="@color/colorTitleBackground"
            android:gravity="left|center_vertical"
            android:paddingLeft="50dp"
            android:text="@string/title"
            android:textColor="@color/colorTitleTextColor" />

        <Button
            android:id="@+id/titleButtonLeft"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titleHeight"
            android:layout_alignRight="@+id/titleTextView"
            android:layout_alignTop="@+id/titleTextView"
            android:paddingRight="100dp"
            android:background="@color/colorTitleBackground"
            android:text="@string/leftButtonText"
            android:textColor="@color/colorTitleButtonTextColor" />

        <Button
            android:id="@+id/titleButtonRight"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titleHeight"
            android:layout_alignRight="@+id/titleTextView"
            android:layout_alignTop="@+id/titleTextView"
            android:background="@color/colorTitleBackground"
            android:text="@string/rightButtonText"
            android:textColor="@color/colorTitleButtonTextColor" />
    </RelativeLayout>
</LinearLayout>