<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/layout_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:background="@color/colorTitleBackground"
            android:gravity="center"
            android:text="@string/title"
            android:textColor="@color/colorTitleTextColor" />

        <Button
            android:id="@+id/titleButtonLeft"
            android:layout_width="70dp"
            android:layout_height="@dimen/titleHeight"
            android:layout_alignLeft="@+id/titleTextView"
            android:layout_alignTop="@+id/titleTextView"
            android:background="@color/colorTitleBackground"
            android:text="@string/leftButtonText"
            android:textColor="@color/colorTitleTextColor" />

        <Button
            android:id="@+id/titleButtonRight"
            android:layout_width="70dp"
            android:layout_height="@dimen/titleHeight"
            android:layout_alignRight="@+id/titleTextView"
            android:layout_alignTop="@+id/titleTextView"
            android:background="@color/colorTitleBackground"
            android:text="@string/rightButtonText"
            android:textColor="@color/colorTitleTextColor" />
    </RelativeLayout>
</LinearLayout>