<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.soft.sunshine.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View style="@style/verLineHeaderStyle" />
        <!--条码-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="2.5"
            android:text="条码" />

        <View style="@style/verLineHeaderStyle" />
        <!--品名-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="2.5"
            android:text="品名" />

        <View style="@style/verLineHeaderStyle" />
        <!--售价-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="1.5"
            android:text="售价" />

        <View style="@style/verLineHeaderStyle" />
        <!--库存-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="1.5"
            android:text="库存" />

        <View style="@style/verLineHeaderStyle" />
    </LinearLayout>

    <View style="@style/horLineStyle" />
    <!--列表视图____________________________-->
    <ListView
        android:id="@+id/listViewGoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorLine"
        android:dividerHeight="@dimen/lineHeight"
        android:listSelector="@color/colorListSelected" />

    <View style="@style/horLineStyle" />
</LinearLayout>
