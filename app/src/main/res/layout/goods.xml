<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.soft.sunshine.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View style="@style/verLineHeaderStyle" />
        <!--行号-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="2"
            android:text="行号" />

        <View style="@style/verLineHeaderStyle" />
        <!--价格-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="3"
            android:text="价格" />

        <View style="@style/verLineHeaderStyle" />
        <!--数量-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="2"
            android:text="数量" />

        <View style="@style/verLineHeaderStyle" />
        <!--折扣-->
        <TextView
            style="@style/listHeaderStyle"
            android:layout_weight="2"
            android:text="折扣" />

        <View style="@style/verLineHeaderStyle" />
    </LinearLayout>

    <View style="@style/horLineStyle" />
    <!--列表视图____________________________-->
    <ListView
        android:id="@+id/listViewGoods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorLine"
        android:dividerHeight="@dimen/lineHeight"
        android:listSelector="@color/colorListSelected" />

    <View style="@style/horLineStyle" />
</LinearLayout>
